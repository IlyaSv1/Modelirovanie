@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <form action="/home/calc" method="post">
        <div class="mb-3">
            <label for="num1" class="form-label">Операнд 1</label>
            <input name="num1" type="text" class="form-control" id="num1" />
        </div>
        <div class="mb-3">
            <label for="num2" class="form-label">Операнд 2</label>
            <input name="num2" type="text" class="form-control" id="num2"/>
        </div>
        <div class="mb-3">
            <label for="Operation" class="form-label">Операторы</label>
            <select type="result" name="operationType" class="form-control" id= "result">
